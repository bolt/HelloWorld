{
    "name": "bolt/helloworld",
    "description": "A small extension to add a 'Hello, World!' greeting to your site, when using {{ helloworld() }} in your templates.",
    "type": "bolt-extension",
    "keywords": ["hello", "world"],
    "require": {
        "bolt/bolt": "^3.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Bob den Otter",
            "email": "bob@twokings.nl"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bolt\\Extension\\Bolt\\HelloWorld\\": "src"
        }
    },
    "extra": {
        "bolt-class": "Bolt\\Extension\\Bolt\\HelloWorld\\HelloWorldExtension"
    }
}
